                </L7p:SetVariable>
                <L7p:AuditDetailAssertion>
                    <L7p:CustomLoggerSuffix stringValue="entel.api.syslog"/>
                    <L7p:Detail stringValue="OTK SUCCESSFUL REQUEST_ID: ${requestId} RESOURCE_OWNER: ${session.subscriber_id} CLIENT_ID: ${session.client_id} SCOPE: ${session.scope} TOKEN: ${access_token} "/>
