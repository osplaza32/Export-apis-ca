<?xml version="1.0" encoding="UTF-8"?>
<wsp:Policy xmlns:L7p="http://www.layer7tech.com/ws/policy" xmlns:wsp="http://schemas.xmlsoap.org/ws/2002/12/policy">
    <wsp:All wsp:Usage="Required">
        <L7p:AuditDetailAssertion>
            <L7p:Detail stringValue="Policy Fragment: Response500 (Soap Transformation)"/>
        </L7p:AuditDetailAssertion>
        <wsp:All wsp:Usage="Required">
            <L7p:AuditDetailAssertion>
                <L7p:CustomLoggerSuffix stringValue="sergio"/>
                <L7p:Detail stringValue="URL: ${request.http.uri}"/>
                <L7p:Enabled booleanValue="false"/>
                <L7p:Level stringValue="WARNING"/>
            </L7p:AuditDetailAssertion>
            <L7p:Split>
                <L7p:AssertionComment assertionComment="included">
                    <L7p:Properties mapValue="included">
                        <L7p:entry>
                            <L7p:key stringValue="RIGHT.COMMENT"/>
                            <L7p:value stringValue="Separar la URI entrante a la API por &quot;/&quot; y llevarlo a un array &quot;requesturi[x]&quot;"/>
                        </L7p:entry>
                    </L7p:Properties>
                </L7p:AssertionComment>
                <L7p:InputVariable stringValue="request.http.uri"/>
                <L7p:OutputVariable stringValue="requesturi"/>
                <L7p:SplitPattern stringValue="/"/>
            </L7p:Split>
            <L7p:AuditDetailAssertion>
                <L7p:CustomLoggerSuffix stringValue="sergio"/>
                <L7p:Detail stringValue="URL: ${requesturi}"/>
                <L7p:Enabled booleanValue="false"/>
                <L7p:Level stringValue="WARNING"/>
            </L7p:AuditDetailAssertion>
            <L7p:SetVariable>
                <L7p:Base64Expression stringValue="JHtyZXF1ZXN0dXJpWzRdfV8ke3JlcXVlc3R1cmlbM119"/>
                <L7p:VariableToSet stringValue="servicio"/>
            </L7p:SetVariable>
            <L7p:AuditDetailAssertion>
                <L7p:CustomLoggerSuffix stringValue="sergio"/>
                <L7p:Detail stringValue="SERVICIO: ${servicio}"/>
                <L7p:Level stringValue="WARNING"/>
            </L7p:AuditDetailAssertion>
            <L7p:SetVariable>
                <L7p:Base64Expression stringValue="JHtNZXNzYWdlSGVhZGVyVHJhY2UucmVzdWx0fQ=="/>
                <L7p:ContentType stringValue="application/json; charset=utf-8"/>
                <L7p:DataType variableDataType="message"/>
                <L7p:VariableToSet stringValue="TraceJson"/>
            </L7p:SetVariable>
            <L7p:JsonTransformation>
                <L7p:DestinationMessageTarget MessageTarget="included">
                    <L7p:OtherTargetMessageVariable stringValue="TraceXML"/>
                    <L7p:Target target="OTHER"/>
                    <L7p:TargetModifiedByGateway booleanValue="true"/>
                </L7p:DestinationMessageTarget>
                <L7p:OtherTargetMessageVariable stringValue="TraceJson"/>
                <L7p:RootTagString stringValue="root"/>
                <L7p:Target target="OTHER"/>
                <L7p:Transformation transformation="JSON_to_XML"/>
            </L7p:JsonTransformation>
            <L7p:SetVariable>
                <L7p:Base64Expression stringValue="PHJzcFRpbWVzdGFtcD4ke2dhdGV3YXkudGltZS5sb2NhbH08L3JzcFRpbWVzdGFtcD4="/>
                <L7p:VariableToSet stringValue="rspTimestamp"/>
            </L7p:SetVariable>
            <L7p:ResponseXpathAssertion>
                <L7p:VariablePrefix stringValue=""/>
                <L7p:XmlMsgSrc stringValue="TraceXML"/>
                <L7p:XpathExpression xpathExpressionValue="included">
                    <L7p:Expression stringValue="/root/reqTimestamp"/>
                    <L7p:Namespaces mapValue="included">
                        <L7p:entry>
                            <L7p:key stringValue="s"/>
                            <L7p:value stringValue="http://schemas.xmlsoap.org/soap/envelope/"/>
                        </L7p:entry>
                    </L7p:Namespaces>
                    <L7p:XpathVersion xpathVersion="XPATH_1_0"/>
                </L7p:XpathExpression>
            </L7p:ResponseXpathAssertion>
            <L7p:RemoveElement>
                <L7p:ElementFromVariable stringValue="responseXpath.elements[0]"/>
                <L7p:ElementToInsertVariable stringValue="rspTimestamp"/>
                <L7p:InsertedElementLocation insertedElementLocation="NEXT_SIBLING"/>
                <L7p:OtherTargetMessageVariable stringValue="TraceXML"/>
                <L7p:Target target="OTHER"/>
            </L7p:RemoveElement>
            <L7p:JsonTransformation>
                <L7p:DestinationMessageTarget MessageTarget="included">
                    <L7p:OtherTargetMessageVariable stringValue="TraceJson"/>
                    <L7p:Target target="OTHER"/>
                    <L7p:TargetModifiedByGateway booleanValue="true"/>
                </L7p:DestinationMessageTarget>
                <L7p:OtherTargetMessageVariable stringValue="TraceXML"/>
                <L7p:RootTagString stringValue=""/>
                <L7p:Target target="OTHER"/>
            </L7p:JsonTransformation>
            <L7p:EvaluateJsonPathExpression>
                <L7p:Expression stringValue="$.root"/>
                <L7p:OtherTargetMessageVariable stringValue="TraceJson"/>
                <L7p:Target target="OTHER"/>
                <L7p:VariablePrefix stringValue="TraceJson"/>
            </L7p:EvaluateJsonPathExpression>
            <L7p:CustomizeErrorResponse>
                <L7p:Content stringValueReference="inline"><![CDATA[{  
   "faultcode":"98 - Error de componente",
   "faultstring":"soapenv:Server",
   "detail":{ 
      "${servicio}":{  
         "ResponseHeader":{  
            "Consumer":${MessageHeaderConsumer.result},
            "Trace":${TraceJson.result},
            "Result": {  
   "status":"ERROR",
   "CanonicalError":{ 
      "type":"NEG",
      "code":"10000",
      "description":"Error en Gateway."
   },
   "SourceError":{  
      "code":${code},
      "description":${description},
      "ErrorSourceDetails":{  
         "source":"CHL-API",
         "details":"CHL-API-GATEWAY"
      },
      "SourceFault":"Error en Gateway Interno"
   }
}
         },
         "Body":null
      }
   }
}]]></L7p:Content>
                <L7p:ContentType stringValue="application/json; charset=UTF-8"/>
                <L7p:ExtraHeaders nameValuePairArray="included"/>
            </L7p:CustomizeErrorResponse>
            <L7p:RaiseError/>
        </wsp:All>
    </wsp:All>
</wsp:Policy>