<?xml version="1.0" encoding="UTF-8"?>
<wsp:Policy xmlns:L7p="http://www.layer7tech.com/ws/policy" xmlns:wsp="http://schemas.xmlsoap.org/ws/2002/12/policy">
    <wsp:All wsp:Usage="Required">
        <L7p:AuditDetailAssertion>
            <L7p:Detail stringValue="RemoteIP:${request.tcp.remoteIP}|NodeIP:${ssgnode.ip}|Time:${request.time}|Method:${request.http.method}|URL:${request.url}|Status:${response.http.status}|User:${request.username}|ClientID:${request.clientid}"/>
        </L7p:AuditDetailAssertion>
        <L7p:AuditDetailAssertion>
            <L7p:Detail stringValue="TiempoTranscurrido ${request.elapsedTime} "/>
        </L7p:AuditDetailAssertion>
        <L7p:AuditDetailAssertion>
            <L7p:Detail stringValue="${httpRouting.latency}"/>
            <L7p:Enabled booleanValue="false"/>
        </L7p:AuditDetailAssertion>
        <L7p:HardcodedResponse>
            <L7p:Base64ResponseBody stringValue="PHJlc3VsdD5PSzwvcmVzdWx0Pg=="/>
        </L7p:HardcodedResponse>
    </wsp:All>
</wsp:Policy>