<?xml version="1.0" encoding="UTF-8"?>
<wsp:Policy xmlns:L7p="http://www.layer7tech.com/ws/policy" xmlns:wsp="http://schemas.xmlsoap.org/ws/2002/12/policy">
    <wsp:All wsp:Usage="Required">
        <L7p:CommentAssertion>
            <L7p:Comment stringValue=" ============================================"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue=" === ***  THIS POLICY IS READ ONLY ***"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue=" === If you have the need to customize this policy"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue=" === please contact CA APIM Support so we can improve customization capability"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue=" ============================================"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="This policy can be found and should be used as 'Encapsulated Assertion'!"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="This policy adds values to the device overview used my mag manager"/>
        </L7p:CommentAssertion>
        <L7p:SetVariable>
            <L7p:Base64Expression stringValue=""/>
            <L7p:VariableToSet stringValue="content-type"/>
        </L7p:SetVariable>
        <L7p:SetVariable>
            <L7p:Base64Expression stringValue=""/>
            <L7p:VariableToSet stringValue="error.code"/>
        </L7p:SetVariable>
        <wsp:OneOrMore wsp:Usage="Required">
            <wsp:All wsp:Usage="Required">
                <L7p:CassandraQuery>
                    <L7p:ConnectionName stringValue="MAG_OAuth_Cassandra"/>
                    <L7p:FailIfNoResults booleanValue="true"/>
                    <L7p:FetchSize intValue="5000"/>
                    <L7p:GenerateXmlResult booleanValue="true"/>
                    <L7p:MaxRecords intValue="10"/>
                    <L7p:NamingMap mapValue="included">
                        <L7p:entry>
                            <L7p:key stringValue="grace_expiration"/>
                            <L7p:value stringValue="grace_expiration"/>
                        </L7p:entry>
                        <L7p:entry>
                            <L7p:key stringValue="certdn"/>
                            <L7p:value stringValue="certdn"/>
                        </L7p:entry>
                        <L7p:entry>
                            <L7p:key stringValue="devicename"/>
                            <L7p:value stringValue="devicename"/>
                        </L7p:entry>
                        <L7p:entry>
                            <L7p:key stringValue="devicestatus"/>
                            <L7p:value stringValue="devicestatus"/>
                        </L7p:entry>
                        <L7p:entry>
                            <L7p:key stringValue="magidentifier"/>
                            <L7p:value stringValue="magidentifier"/>
                        </L7p:entry>
                        <L7p:entry>
                            <L7p:key stringValue="multiuser"/>
                            <L7p:value stringValue="multiuser"/>
                        </L7p:entry>
                        <L7p:entry>
                            <L7p:key stringValue="signed_cert_base64"/>
                            <L7p:value stringValue="signed_cert_base64"/>
                        </L7p:entry>
                        <L7p:entry>
                            <L7p:key stringValue="deviceid"/>
                            <L7p:value stringValue="deviceid"/>
                        </L7p:entry>
                        <L7p:entry>
                            <L7p:key stringValue="updated"/>
                            <L7p:value stringValue="updated"/>
                        </L7p:entry>
                        <L7p:entry>
                            <L7p:key stringValue="csr_base64"/>
                            <L7p:value stringValue="csr_base64"/>
                        </L7p:entry>
                        <L7p:entry>
                            <L7p:key stringValue="username"/>
                            <L7p:value stringValue="username"/>
                        </L7p:entry>
                    </L7p:NamingMap>
                    <L7p:Prefix stringValue="queryDeviceInfo"/>
                    <L7p:QueryDocument stringValueReference="inline"><![CDATA[SELECT magidentifier, certdn, username, devicestatus, devicename, deviceid, created, updated, multiuser, csr_base64, signed_cert_base64, grace_expiration
                FROM mag_msso_device
                WHERE magidentifier = ${magidentifier}]]></L7p:QueryDocument>
                    <L7p:QueryTimeout stringValueNull="null"/>
                </L7p:CassandraQuery>
                <L7p:SetVariable>
                    <L7p:Base64Expression stringValue="JHttYWdpZGVudGlmaWVyfQ=="/>
                    <L7p:VariableToSet stringValue="query_magidentifier"/>
                </L7p:SetVariable>
                <wsp:OneOrMore wsp:Usage="Required">
                    <L7p:ComparisonAssertion>
                        <L7p:CaseSensitive booleanValue="false"/>
                        <L7p:Expression1 stringValue="${queryDeviceInfo.csr_base64}"/>
                        <L7p:Expression2 stringValue=""/>
                        <L7p:Negate booleanValue="true"/>
                        <L7p:Operator operator="EMPTY"/>
                        <L7p:Predicates predicates="included">
                            <L7p:item binary="included">
                                <L7p:CaseSensitive booleanValue="false"/>
                                <L7p:Negated booleanValue="true"/>
                                <L7p:Operator operator="EMPTY"/>
                                <L7p:RightValue stringValue=""/>
                            </L7p:item>
                        </L7p:Predicates>
                    </L7p:ComparisonAssertion>
                    <L7p:SetVariable>
                        <L7p:Base64Expression stringValue=""/>
                        <L7p:VariableToSet stringValue="queryDeviceInfo.csr_base64"/>
                    </L7p:SetVariable>
                    <L7p:assertionComment>
                        <L7p:Properties mapValue="included">
                            <L7p:entry>
                                <L7p:key stringValue="LEFT.COMMENT"/>
                                <L7p:value stringValue="csr null handler"/>
                            </L7p:entry>
                        </L7p:Properties>
                    </L7p:assertionComment>
                </wsp:OneOrMore>
                <wsp:OneOrMore wsp:Usage="Required">
                    <L7p:ComparisonAssertion>
                        <L7p:CaseSensitive booleanValue="false"/>
                        <L7p:Expression1 stringValue="${queryDeviceInfo.signed_cert_base64}"/>
                        <L7p:Expression2 stringValue=""/>
                        <L7p:Negate booleanValue="true"/>
                        <L7p:Operator operator="EMPTY"/>
                        <L7p:Predicates predicates="included">
                            <L7p:item binary="included">
                                <L7p:CaseSensitive booleanValue="false"/>
                                <L7p:Negated booleanValue="true"/>
                                <L7p:Operator operator="EMPTY"/>
                                <L7p:RightValue stringValue=""/>
                            </L7p:item>
                        </L7p:Predicates>
                    </L7p:ComparisonAssertion>
                    <L7p:SetVariable>
                        <L7p:Base64Expression stringValue=""/>
                        <L7p:VariableToSet stringValue="queryDeviceInfo.signed_cert_base64"/>
                    </L7p:SetVariable>
                    <L7p:assertionComment>
                        <L7p:Properties mapValue="included">
                            <L7p:entry>
                                <L7p:key stringValue="LEFT.COMMENT"/>
                                <L7p:value stringValue="signed_cert null handler"/>
                            </L7p:entry>
                        </L7p:Properties>
                    </L7p:assertionComment>
                </wsp:OneOrMore>
                <wsp:OneOrMore wsp:Usage="Required">
                    <L7p:ComparisonAssertion>
                        <L7p:AssertionComment assertionComment="included">
                            <L7p:Properties mapValue="included">
                                <L7p:entry>
                                    <L7p:key stringValue="LEFT.COMMENT"/>
                                    <L7p:value stringValue="Ignore"/>
                                </L7p:entry>
                                <L7p:entry>
                                    <L7p:key stringValue="RIGHT.COMMENT"/>
                                    <L7p:value stringValue="The given mag-identifier did not exist"/>
                                </L7p:entry>
                            </L7p:Properties>
                        </L7p:AssertionComment>
                        <L7p:CaseSensitive booleanValue="false"/>
                        <L7p:Expression1 stringValue="${query_magidentifier}"/>
                        <L7p:Expression2 stringValue=""/>
                        <L7p:Operator operator="EMPTY"/>
                        <L7p:Predicates predicates="included">
                            <L7p:item binary="included">
                                <L7p:CaseSensitive booleanValue="false"/>
                                <L7p:Operator operator="EMPTY"/>
                                <L7p:RightValue stringValue=""/>
                            </L7p:item>
                        </L7p:Predicates>
                    </L7p:ComparisonAssertion>
                    <L7p:CassandraQuery>
                        <L7p:AssertionComment assertionComment="included">
                            <L7p:Properties mapValue="included">
                                <L7p:entry>
                                    <L7p:key stringValue="LEFT.COMMENT"/>
                                    <L7p:value stringValue="Overview"/>
                                </L7p:entry>
                                <L7p:entry>
                                    <L7p:key stringValue="RIGHT.COMMENT"/>
                                    <L7p:value stringValue="Add values to the overview table"/>
                                </L7p:entry>
                            </L7p:Properties>
                        </L7p:AssertionComment>
                        <L7p:ConnectionName stringValue="MAG_OAuth_Cassandra"/>
                        <L7p:FetchSize intValue="5000"/>
                        <L7p:MaxRecords intValue="10"/>
                        <L7p:QueryDocument stringValueReference="inline"><![CDATA[BEGIN BATCH

                INSERT INTO mag_msso_device_overview (magidentifier,certdn,username,devicestatus,devicename,deviceid,created,updated,multiuser,client_key,access_token,csr_base64, signed_cert_base64, grace_expiration)
                VALUES (${magidentifier},${queryDeviceInfo.certdn},${queryDeviceInfo.username},${queryDeviceInfo.devicestatus},${queryDeviceInfo.devicename},${queryDeviceInfo.deviceid},${queryDeviceInfo.created},${queryDeviceInfo.updated},${queryDeviceInfo.multiuser},${client_key},${token}, ${queryDeviceInfo.csr_base64}, ${queryDeviceInfo.signed_cert_base64}, ${queryDeviceInfo.grace_expiration})

                INSERT INTO mag_msso_device_overview_token (access_token, magidentifier, client_key)
                VALUES(${token}, ${magidentifier}, ${client_key});

                APPLY BATCH]]></L7p:QueryDocument>
                        <L7p:QueryTimeout stringValueNull="null"/>
                    </L7p:CassandraQuery>
                </wsp:OneOrMore>
                <L7p:SetVariable>
                    <L7p:Base64Expression stringValue="dGV4dC9wbGFpbg=="/>
                    <L7p:VariableToSet stringValue="content-type"/>
                </L7p:SetVariable>
                <L7p:SetVariable>
                    <L7p:Base64Expression stringValue="cGVyc2lzdGVk"/>
                    <L7p:VariableToSet stringValue="result"/>
                </L7p:SetVariable>
                <L7p:assertionComment>
                    <L7p:Properties mapValue="included">
                        <L7p:entry>
                            <L7p:key stringValue="LEFT.COMMENT"/>
                            <L7p:value stringValue="Device info"/>
                        </L7p:entry>
                        <L7p:entry>
                            <L7p:key stringValue="RIGHT.COMMENT"/>
                            <L7p:value stringValue="Get info about the given device"/>
                        </L7p:entry>
                    </L7p:Properties>
                </L7p:assertionComment>
            </wsp:All>
            <wsp:All wsp:Usage="Required">
                <L7p:SetVariable>
                    <L7p:Base64Expression stringValue="MTA3"/>
                    <L7p:VariableToSet stringValue="error.code"/>
                </L7p:SetVariable>
                <L7p:FalseAssertion/>
                <L7p:assertionComment>
                    <L7p:Properties mapValue="included">
                        <L7p:entry>
                            <L7p:key stringValue="LEFT.COMMENT"/>
                            <L7p:value stringValue="Error"/>
                        </L7p:entry>
                    </L7p:Properties>
                </L7p:assertionComment>
            </wsp:All>
        </wsp:OneOrMore>
    </wsp:All>
</wsp:Policy>