                            <L7p:ConnectionName stringValue="MAG_OAuth_Cassandra"/>
                            <L7p:FetchSize intValue="5000"/>
                            <L7p:MaxRecords intValue="10"/>
                            <L7p:QueryDocument stringValueReference="inline"><![CDATA[DELETE FROM mag_msso_device_overview_token
                WHERE access_token=${access_token}]]></L7p:QueryDocument>
                            <L7p:QueryTimeout stringValueNull="null"/>
                        </L7p:CassandraQuery>
