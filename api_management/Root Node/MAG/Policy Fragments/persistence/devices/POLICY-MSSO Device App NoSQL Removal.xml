                    <L7p:FetchSize intValue="5000"/>
                    <L7p:MaxRecords intValue="10"/>
                    <L7p:NamingMap mapValue="included">
                        <L7p:entry>
                            <L7p:key stringValue="access_token"/>
                            <L7p:value stringValue="access_token"/>
                        </L7p:entry>
                        <L7p:entry>
                            <L7p:key stringValue="client_key"/>
                            <L7p:value stringValue="client_key"/>
                        </L7p:entry>
                    </L7p:NamingMap>
                    <L7p:Prefix stringValue="queryByIdentifier"/>
                    <L7p:QueryDocument stringValueReference="inline"><![CDATA[SELECT access_token, client_key
                FROM  mag_msso_device_overview
                WHERE magidentifier = ${magidentifier}]]></L7p:QueryDocument>
                    <L7p:QueryTimeout stringValueNull="null"/>
                </L7p:CassandraQuery>
                <L7p:ForEachLoop L7p:Usage="Required"
                    loopVariable="queryByIdentifier.client_key" variablePrefix="client_key">
                    <L7p:SetVariable>
                        <L7p:Base64Expression stringValue="JHtjbGllbnRfa2V5LmN1cnJlbnR9"/>
                        <L7p:VariableToSet stringValue="client_key_current"/>
                    </L7p:SetVariable>
                    <L7p:CassandraQuery>
                        <L7p:ConnectionName stringValue="MAG_OAuth_Cassandra"/>
                        <L7p:FetchSize intValue="5000"/>
                        <L7p:MaxRecords intValue="10"/>
                        <L7p:Prefix stringValue="queryUpdateOverview"/>
                        <L7p:QueryDocument stringValueReference="inline"><![CDATA[DELETE FROM mag_msso_device_overview
                WHERE magidentifier=${magidentifier}
                AND client_key=${client_key_current}]]></L7p:QueryDocument>
                        <L7p:QueryTimeout stringValueNull="null"/>
                    </L7p:CassandraQuery>
                    <L7p:assertionComment>
                        <L7p:Properties mapValue="included">
                            <L7p:entry>
                                <L7p:key stringValue="LEFT.COMMENT"/>
                                <L7p:value stringValue="Overview"/>
                            </L7p:entry>
                            <L7p:entry>
                                <L7p:key stringValue="RIGHT.COMMENT"/>
                                <L7p:value stringValue="Remove values from the overview table that is used by MAG Manager"/>
                            </L7p:entry>
                        </L7p:Properties>
                    </L7p:assertionComment>
                </L7p:ForEachLoop>
                <L7p:ForEachLoop L7p:Usage="Required"
                    loopVariable="queryByIdentifier.access_token" variablePrefix="access_token">
                    <L7p:SetVariable>
                        <L7p:Base64Expression stringValue="JHthY2Nlc3NfdG9rZW4uY3VycmVudH0="/>
                        <L7p:VariableToSet stringValue="access_token"/>
                    </L7p:SetVariable>
                    <wsp:OneOrMore wsp:Usage="Required">
                        <L7p:ComparisonAssertion>
                            <L7p:CaseSensitive booleanValue="false"/>
                            <L7p:Expression1 stringValue="${access_token}"/>
                            <L7p:Expression2 stringValue=""/>
                            <L7p:Operator operator="EMPTY"/>
                            <L7p:Predicates predicates="included">
                                <L7p:item binary="included">
                                    <L7p:CaseSensitive booleanValue="false"/>
                                    <L7p:Operator operator="EMPTY"/>
                                    <L7p:RightValue stringValue=""/>
                                </L7p:item>
                            </L7p:Predicates>
