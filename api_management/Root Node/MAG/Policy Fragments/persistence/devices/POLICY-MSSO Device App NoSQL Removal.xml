                    </L7p:Predicates>
                </L7p:ComparisonAssertion>
                <L7p:CassandraQuery>
                    <L7p:ConnectionName stringValue="MAG_OAuth_Cassandra"/>
                    <L7p:FetchSize intValue="5000"/>
                    <L7p:MaxRecords intValue="100"/>
                    <L7p:NamingMap mapValue="included">
                        <L7p:entry>
                            <L7p:key stringValue="client_key"/>
                            <L7p:value stringValue="client_key"/>
                        </L7p:entry>
                        <L7p:entry>
                            <L7p:key stringValue="magidentifier"/>
                            <L7p:value stringValue="magidentifier"/>
                        </L7p:entry>
                    </L7p:NamingMap>
                    <L7p:Prefix stringValue="queryDeviceByToken"/>
                    <L7p:QueryDocument stringValueReference="inline"><![CDATA[SELECT magidentifier, client_key
                FROM mag_msso_device_overview_token
                WHERE access_token = ${access_token}]]></L7p:QueryDocument>
                    <L7p:QueryTimeout stringValueNull="null"/>
                </L7p:CassandraQuery>
                <L7p:SetVariable>
                    <L7p:AssertionComment assertionComment="included">
                        <L7p:Properties mapValue="included">
                            <L7p:entry>
                                <L7p:key stringValue="LEFT.COMMENT"/>
                                <L7p:value stringValue="FIX"/>
                            </L7p:entry>
                        </L7p:Properties>
                    </L7p:AssertionComment>
                    <L7p:Base64Expression stringValue="JHtxdWVyeURldmljZUJ5VG9rZW4ubWFnaWRlbnRpZmllcn0="/>
                    <L7p:VariableToSet stringValue="query_magidentifier"/>
                </L7p:SetVariable>
                <L7p:SetVariable>
                    <L7p:Base64Expression stringValue="JHtxdWVyeURldmljZUJ5VG9rZW4uY2xpZW50X2tleX0="/>
                    <L7p:VariableToSet stringValue="query_client_key"/>
                </L7p:SetVariable>
                <wsp:OneOrMore wsp:Usage="Required">
                    <L7p:ComparisonAssertion>
                        <L7p:Expression1 stringValue="${query_magidentifier}"/>
                        <L7p:Expression2 stringValue=""/>
                        <L7p:Operator operator="EMPTY"/>
                        <L7p:Predicates predicates="included">
                            <L7p:item binary="included">
                                <L7p:Operator operator="EMPTY"/>
                                <L7p:RightValue stringValue=""/>
                            </L7p:item>
                        </L7p:Predicates>
                    </L7p:ComparisonAssertion>
                    <L7p:CassandraQuery>
                        <L7p:ConnectionName stringValue="MAG_OAuth_Cassandra"/>
                        <L7p:FetchSize intValue="5000"/>
                        <L7p:MaxRecords intValue="10"/>
                        <L7p:QueryDocument stringValueReference="inline"><![CDATA[BEGIN BATCH

                DELETE FROM mag_msso_device_overview_token
                WHERE access_token=${access_token};

                DELETE FROM mag_msso_device_overview
                WHERE magidentifier=${query_magidentifier}
                AND client_key=${query_client_key};

                APPLY BATCH]]></L7p:QueryDocument>
                        <L7p:QueryTimeout stringValueNull="null"/>
                    </L7p:CassandraQuery>
                    <L7p:assertionComment>
                        <L7p:Properties mapValue="included">
                            <L7p:entry>
                                <L7p:key stringValue="LEFT.COMMENT"/>
                                <L7p:value stringValue="Query"/>
                            </L7p:entry>
                            <L7p:entry>
                                <L7p:key stringValue="RIGHT.COMMENT"/>
                                <L7p:value stringValue="Skip if lookup found nothing"/>
                            </L7p:entry>
                        </L7p:Properties>
                    </L7p:assertionComment>
                </wsp:OneOrMore>
                <L7p:assertionComment>
                    <L7p:Properties mapValue="included">
                        <L7p:entry>
                            <L7p:key stringValue="LEFT.COMMENT"/>
                            <L7p:value stringValue="access_token"/>
                        </L7p:entry>
                        <L7p:entry>
                            <L7p:key stringValue="RIGHT.COMMENT"/>
                            <L7p:value stringValue="delete by given access_token"/>
                        </L7p:entry>
                    </L7p:Properties>
                </L7p:assertionComment>
            </wsp:All>
            <wsp:All wsp:Usage="Required">
                <L7p:ComparisonAssertion>
                    <L7p:Expression1 stringValue="${client_id}"/>
                    <L7p:Expression2 stringValue=""/>
                    <L7p:Negate booleanValue="true"/>
                    <L7p:Operator operator="EMPTY"/>
                    <L7p:Predicates predicates="included">
