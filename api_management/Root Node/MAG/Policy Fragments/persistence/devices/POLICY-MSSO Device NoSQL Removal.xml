<?xml version="1.0" encoding="UTF-8"?>
<wsp:Policy xmlns:L7p="http://www.layer7tech.com/ws/policy" xmlns:wsp="http://schemas.xmlsoap.org/ws/2002/12/policy">
    <wsp:All wsp:Usage="Required">
        <L7p:CommentAssertion>
            <L7p:Comment stringValue=" ============================================"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue=" === ***  THIS POLICY IS READ ONLY ***"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue=" === If you have the need to customize this policy"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue=" === please contact CA APIM Support so we can improve customization capability"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue=" ============================================"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="This policy can be found and should be used as 'Encapsulated Assertion'!"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="This policy removes a device registration by mag identifier or DN"/>
        </L7p:CommentAssertion>
        <L7p:SetVariable>
            <L7p:Base64Expression stringValue=""/>
            <L7p:VariableToSet stringValue="content-type"/>
        </L7p:SetVariable>
        <L7p:SetVariable>
            <L7p:Base64Expression stringValue=""/>
            <L7p:VariableToSet stringValue="error.code"/>
        </L7p:SetVariable>
        <wsp:OneOrMore wsp:Usage="Required">
            <wsp:All wsp:Usage="Required">
                <L7p:ComparisonAssertion>
                    <L7p:Expression1 stringValue="${magidentifier}"/>
                    <L7p:Expression2 stringValue=""/>
                    <L7p:Negate booleanValue="true"/>
                    <L7p:Operator operator="EMPTY"/>
                    <L7p:Predicates predicates="included">
                        <L7p:item binary="included">
                            <L7p:Negated booleanValue="true"/>
                            <L7p:Operator operator="EMPTY"/>
                            <L7p:RightValue stringValue=""/>
                        </L7p:item>
                    </L7p:Predicates>
                </L7p:ComparisonAssertion>
                <L7p:ComparisonAssertion>
                    <L7p:CaseSensitive booleanValue="false"/>
                    <L7p:Expression1 stringValue="${certdn}"/>
                    <L7p:Expression2 stringValue=""/>
                    <L7p:Operator operator="EMPTY"/>
                    <L7p:Predicates predicates="included">
                        <L7p:item binary="included">
                            <L7p:CaseSensitive booleanValue="false"/>
                            <L7p:Operator operator="EMPTY"/>
                            <L7p:RightValue stringValue=""/>
                        </L7p:item>
                    </L7p:Predicates>
                </L7p:ComparisonAssertion>
                <L7p:SetVariable>
                    <L7p:Base64Expression stringValue="JHttYWdpZGVudGlmaWVyfQ=="/>
                    <L7p:VariableToSet stringValue="query_magidentifier"/>
                </L7p:SetVariable>
                <L7p:assertionComment>
                    <L7p:Properties mapValue="included">
                        <L7p:entry>
                            <L7p:key stringValue="LEFT.COMMENT"/>
                            <L7p:value stringValue="Magidentifier"/>
                        </L7p:entry>
                    </L7p:Properties>
                </L7p:assertionComment>
            </wsp:All>
            <wsp:All wsp:Usage="Required">
                <L7p:ComparisonAssertion>
                    <L7p:Expression1 stringValue="${certdn}"/>
                    <L7p:Expression2 stringValue=""/>
                    <L7p:Negate booleanValue="true"/>
                    <L7p:Operator operator="EMPTY"/>
                    <L7p:Predicates predicates="included">
                        <L7p:item binary="included">
                            <L7p:Negated booleanValue="true"/>
                            <L7p:Operator operator="EMPTY"/>
                            <L7p:RightValue stringValue=""/>
                        </L7p:item>
                    </L7p:Predicates>
                </L7p:ComparisonAssertion>
                <L7p:ComparisonAssertion>
                    <L7p:CaseSensitive booleanValue="false"/>
                    <L7p:Expression1 stringValue="${magidentifier}"/>
                    <L7p:Expression2 stringValue=""/>
                    <L7p:Operator operator="EMPTY"/>
                    <L7p:Predicates predicates="included">
                        <L7p:item binary="included">
                            <L7p:CaseSensitive booleanValue="false"/>
                            <L7p:Operator operator="EMPTY"/>
                            <L7p:RightValue stringValue=""/>
                        </L7p:item>
                    </L7p:Predicates>
                </L7p:ComparisonAssertion>
                <L7p:CassandraQuery>
                    <L7p:ConnectionName stringValue="MAG_OAuth_Cassandra"/>
                    <L7p:FetchSize intValue="5000"/>
                    <L7p:MaxRecords intValue="10"/>
                    <L7p:NamingMap mapValue="included">
                        <L7p:entry>
                            <L7p:key stringValue="magidentifier"/>
                            <L7p:value stringValue="magidentifier"/>
                        </L7p:entry>
                    </L7p:NamingMap>
                    <L7p:Prefix stringValue="queryDeviceInfo"/>
                    <L7p:QueryDocument stringValueReference="inline"><![CDATA[SELECT magidentifier
                FROM mag_msso_device_certdn
                WHERE certdn = ${certdn}]]></L7p:QueryDocument>
                    <L7p:QueryTimeout stringValueNull="null"/>
                </L7p:CassandraQuery>
                <L7p:SetVariable>
                    <L7p:Base64Expression stringValue="JHtxdWVyeURldmljZUluZm8ubWFnaWRlbnRpZmllcn0="/>
                    <L7p:VariableToSet stringValue="query_magidentifier"/>
                </L7p:SetVariable>
                <L7p:assertionComment>
                    <L7p:Properties mapValue="included">
                        <L7p:entry>
                            <L7p:key stringValue="LEFT.COMMENT"/>
                            <L7p:value stringValue="CertDN"/>
                        </L7p:entry>
                    </L7p:Properties>
                </L7p:assertionComment>
            </wsp:All>
            <wsp:All wsp:Usage="Required">
                <L7p:AuditDetailAssertion>
                    <L7p:Detail stringValue="A query to look up a device to delete it failed. Parameters: certdn: '${certdn}', magidentifier: '${magidentifier}'"/>
                </L7p:AuditDetailAssertion>
                <L7p:SetVariable>
                    <L7p:Base64Expression stringValue="MDAw"/>
                    <L7p:VariableToSet stringValue="error.code"/>
                </L7p:SetVariable>
                <L7p:FalseAssertion/>
                <L7p:assertionComment>
                    <L7p:Properties mapValue="included">
                        <L7p:entry>
                            <L7p:key stringValue="LEFT.COMMENT"/>
                            <L7p:value stringValue="error"/>
                        </L7p:entry>
                    </L7p:Properties>
                </L7p:assertionComment>
            </wsp:All>
            <L7p:assertionComment>
                <L7p:Properties mapValue="included">
                    <L7p:entry>
                        <L7p:key stringValue="LEFT.COMMENT"/>
                        <L7p:value stringValue="perform query"/>
                    </L7p:entry>
                </L7p:Properties>
            </L7p:assertionComment>
        </wsp:OneOrMore>
        <wsp:OneOrMore wsp:Usage="Required">
            <L7p:ComparisonAssertion>
                <L7p:AssertionComment assertionComment="included">
                    <L7p:Properties mapValue="included">
                        <L7p:entry>
                            <L7p:key stringValue="LEFT.COMMENT"/>
                            <L7p:value stringValue="Ignore"/>
                        </L7p:entry>
                        <L7p:entry>
                            <L7p:key stringValue="RIGHT.COMMENT"/>
                            <L7p:value stringValue="The device to be removed does not exist"/>
                        </L7p:entry>
                    </L7p:Properties>
                </L7p:AssertionComment>
                <L7p:CaseSensitive booleanValue="false"/>
                <L7p:Expression1 stringValue="${query_magidentifier}"/>
                <L7p:Expression2 stringValue=""/>
                <L7p:Operator operator="EMPTY"/>
                <L7p:Predicates predicates="included">
                    <L7p:item binary="included">
                        <L7p:CaseSensitive booleanValue="false"/>
                        <L7p:Operator operator="EMPTY"/>
                        <L7p:RightValue stringValue=""/>
                    </L7p:item>
                </L7p:Predicates>
            </L7p:ComparisonAssertion>
            <wsp:All wsp:Usage="Required">
                <wsp:All wsp:Usage="Required">
                    <L7p:CassandraQuery>
                        <L7p:ConnectionName stringValue="MAG_OAuth_Cassandra"/>
                        <L7p:FetchSize intValue="5000"/>
                        <L7p:MaxRecords intValue="10"/>
                        <L7p:NamingMap mapValue="included">
                            <L7p:entry>
                                <L7p:key stringValue="certdn"/>
                                <L7p:value stringValue="certdn"/>
                            </L7p:entry>
                            <L7p:entry>
                                <L7p:key stringValue="devicename"/>
                                <L7p:value stringValue="devicename"/>
                            </L7p:entry>
                            <L7p:entry>
                                <L7p:key stringValue="magidentifier"/>
                                <L7p:value stringValue="magidentifier"/>
                            </L7p:entry>
                            <L7p:entry>
                                <L7p:key stringValue="deviceid"/>
                                <L7p:value stringValue="deviceid"/>
                            </L7p:entry>
                            <L7p:entry>
                                <L7p:key stringValue="username"/>
                                <L7p:value stringValue="username"/>
                            </L7p:entry>
                        </L7p:NamingMap>
                        <L7p:Prefix stringValue="queryDeviceInfo"/>
                        <L7p:QueryDocument stringValueReference="inline"><![CDATA[SELECT username, deviceid, devicename, certdn, magidentifier
                FROM mag_msso_device
                WHERE magidentifier = ${query_magidentifier}]]></L7p:QueryDocument>
                        <L7p:QueryTimeout stringValueNull="null"/>
                    </L7p:CassandraQuery>
                </wsp:All>
                <wsp:OneOrMore wsp:Usage="Required">
                    <wsp:All wsp:Usage="Required">
                        <L7p:ComparisonAssertion>
                            <L7p:AssertionComment assertionComment="included">
                                <L7p:Properties mapValue="included">
                                    <L7p:entry>
                                    <L7p:key stringValue="LEFT.COMMENT"/>
                                    <L7p:value stringValue="no"/>
                                    </L7p:entry>
                                </L7p:Properties>
                            </L7p:AssertionComment>
                            <L7p:CaseSensitive booleanValue="false"/>
                            <L7p:Expression1 stringValue="${queryDeviceInfo.queryresult.count}"/>
                            <L7p:Expression2 stringValue="0"/>
                            <L7p:Predicates predicates="included">
                                <L7p:item binary="included">
                                    <L7p:CaseSensitive booleanValue="false"/>
                                    <L7p:RightValue stringValue="0"/>
                                </L7p:item>
                            </L7p:Predicates>
                        </L7p:ComparisonAssertion>
                        <L7p:SetVariable>
                            <L7p:Base64Expression stringValue=""/>
                            <L7p:VariableToSet stringValue="result"/>
                        </L7p:SetVariable>
                    </wsp:All>
                    <wsp:All wsp:Usage="Required">
                        <L7p:SetVariable>
                            <L7p:Base64Expression stringValue="dHJ1ZQ=="/>
                            <L7p:VariableToSet stringValue="exist"/>
                        </L7p:SetVariable>
                        <L7p:SetVariable>
                            <L7p:Base64Expression stringValue="JHtxdWVyeURldmljZUluZm8udXNlcm5hbWV9"/>
                            <L7p:VariableToSet stringValue="query_username"/>
                        </L7p:SetVariable>
                        <L7p:SetVariable>
                            <L7p:Base64Expression stringValue="JHtxdWVyeURldmljZUluZm8uZGV2aWNlaWR9"/>
                            <L7p:VariableToSet stringValue="query_deviceid"/>
                        </L7p:SetVariable>
                        <L7p:SetVariable>
                            <L7p:Base64Expression stringValue="JHtxdWVyeURldmljZUluZm8uZGV2aWNlbmFtZX0="/>
                            <L7p:VariableToSet stringValue="query_devicename"/>
                        </L7p:SetVariable>
                        <L7p:SetVariable>
                            <L7p:Base64Expression stringValue="JHtxdWVyeURldmljZUluZm8uY2VydGRufQ=="/>
                            <L7p:VariableToSet stringValue="query_certdn"/>
                        </L7p:SetVariable>
                        <L7p:CassandraQuery>
                            <L7p:ConnectionName stringValue="MAG_OAuth_Cassandra"/>
                            <L7p:FetchSize intValue="5000"/>
                            <L7p:MaxRecords intValue="10"/>
                            <L7p:QueryDocument stringValueReference="inline"><![CDATA[BEGIN BATCH

                DELETE FROM mag_msso_device
                WHERE magidentifier = ${query_magidentifier};

                DELETE FROM mag_msso_device_username_view
                WHERE username = ${query_username}
                AND deviceid = ${query_deviceid};

                DELETE FROM mag_msso_device_user
                WHERE username = ${query_username}
                AND magidentifier = ${query_magidentifier};

                DELETE FROM mag_msso_device_certdn
                WHERE certdn = ${query_certdn};

                DELETE FROM mag_msso_device_deviceid
                WHERE deviceid = ${query_deviceid};

                APPLY BATCH]]></L7p:QueryDocument>
                            <L7p:QueryTimeout stringValueNull="null"/>
                        </L7p:CassandraQuery>
                        <L7p:CommentAssertion>
                            <L7p:Comment stringValue="Now, get client_key and access_token for other tables to be cleaned"/>
                        </L7p:CommentAssertion>
                        <L7p:CassandraQuery>
                            <L7p:ConnectionName stringValue="MAG_OAuth_Cassandra"/>
                            <L7p:FetchSize intValue="5000"/>
                            <L7p:MaxRecords intValue="100"/>
                            <L7p:NamingMap mapValue="included">
                                <L7p:entry>
                                    <L7p:key stringValue="access_token"/>
                                    <L7p:value stringValue="access_token"/>
                                </L7p:entry>
                                <L7p:entry>
                                    <L7p:key stringValue="client_key"/>
                                    <L7p:value stringValue="client_key"/>
                                </L7p:entry>
                            </L7p:NamingMap>
                            <L7p:Prefix stringValue="queryOverviewDetails"/>
                            <L7p:QueryDocument stringValueReference="inline"><![CDATA[SELECT client_key, access_token
                FROM mag_msso_device_overview
                WHERE magidentifier=${query_magidentifier}]]></L7p:QueryDocument>
                            <L7p:QueryTimeout stringValueNull="null"/>
                        </L7p:CassandraQuery>
                        <wsp:All wsp:Usage="Required">
                            <L7p:ForEachLoop L7p:Usage="Required"
                                loopVariable="queryOverviewDetails.client_key" variablePrefix="client_key">
                                <L7p:SetVariable>
                                    <L7p:Base64Expression stringValue="JHtjbGllbnRfa2V5LmN1cnJlbnR9"/>
                                    <L7p:VariableToSet stringValue="client_key_current"/>
                                </L7p:SetVariable>
                                <L7p:CassandraQuery>
                                    <L7p:ConnectionName stringValue="MAG_OAuth_Cassandra"/>
                                    <L7p:FetchSize intValue="5000"/>
                                    <L7p:MaxRecords intValue="10"/>
                                    <L7p:Prefix stringValue="queryUpdateOverview"/>
                                    <L7p:QueryDocument stringValueReference="inline"><![CDATA[DELETE FROM mag_msso_device_overview
                WHERE magidentifier=${query_magidentifier}
                AND client_key=${client_key_current}]]></L7p:QueryDocument>
                                    <L7p:QueryTimeout stringValueNull="null"/>
                                </L7p:CassandraQuery>
                            </L7p:ForEachLoop>
                            <L7p:assertionComment>
                                <L7p:Properties mapValue="included">
                                    <L7p:entry>
                                    <L7p:key stringValue="LEFT.COMMENT"/>
                                    <L7p:value stringValue="Overview"/>
                                    </L7p:entry>
                                </L7p:Properties>
                            </L7p:assertionComment>
                        </wsp:All>
                        <wsp:All wsp:Usage="Required">
                            <L7p:SetVariable>
                                <L7p:AssertionComment assertionComment="included">
                                    <L7p:Properties mapValue="included">
                                    <L7p:entry>
                                    <L7p:key stringValue="LEFT.COMMENT"/>
                                    <L7p:value stringValue="initialize"/>
                                    </L7p:entry>
                                    </L7p:Properties>
                                </L7p:AssertionComment>
                                <L7p:Base64Expression stringValue=""/>
                                <L7p:VariableToSet stringValue="temp_token"/>
                            </L7p:SetVariable>
                            <L7p:SetVariable>
                                <L7p:AssertionComment assertionComment="included">
                                    <L7p:Properties mapValue="included">
                                    <L7p:entry>
                                    <L7p:key stringValue="LEFT.COMMENT"/>
                                    <L7p:value stringValue="initialize"/>
                                    </L7p:entry>
                                    </L7p:Properties>
                                </L7p:AssertionComment>
                                <L7p:Base64Expression stringValue=""/>
                                <L7p:VariableToSet stringValue="client_key"/>
                            </L7p:SetVariable>
                            <L7p:SetVariable>
                                <L7p:AssertionComment assertionComment="included">
                                    <L7p:Properties mapValue="included">
                                    <L7p:entry>
                                    <L7p:key stringValue="LEFT.COMMENT"/>
                                    <L7p:value stringValue="initialize"/>
                                    </L7p:entry>
                                    </L7p:Properties>
                                </L7p:AssertionComment>
                                <L7p:Base64Expression stringValue=""/>
                                <L7p:VariableToSet stringValue="refresh_token"/>
                            </L7p:SetVariable>
                            <L7p:ForEachLoop L7p:Usage="Required"
                                iterationLimit="1000"
                                loopVariable="queryOverviewDetails.access_token" variablePrefix="access_token">
                                <L7p:SetVariable>
                                    <L7p:Base64Expression stringValue="JHthY2Nlc3NfdG9rZW4uY3VycmVudH0="/>
                                    <L7p:VariableToSet stringValue="access_token"/>
                                </L7p:SetVariable>
                                <wsp:OneOrMore wsp:Usage="Required">
                                    <L7p:ComparisonAssertion>
                                    <L7p:CaseSensitive booleanValue="false"/>
                                    <L7p:Expression1 stringValue="${access_token}"/>
                                    <L7p:Expression2 stringValue=""/>
                                    <L7p:Operator operator="EMPTY"/>
                                    <L7p:Predicates predicates="included">
                                    <L7p:item binary="included">
                                    <L7p:CaseSensitive booleanValue="false"/>
                                    <L7p:Operator operator="EMPTY"/>
                                    <L7p:RightValue stringValue=""/>
                                    </L7p:item>
                                    </L7p:Predicates>
                                    </L7p:ComparisonAssertion>
                                    <wsp:All wsp:Usage="Required">
                                    <L7p:CassandraQuery>
                                    <L7p:ConnectionName stringValue="MAG_OAuth_Cassandra"/>
                                    <L7p:FetchSize intValue="5000"/>
                                    <L7p:MaxRecords intValue="10"/>
                                    <L7p:QueryDocument stringValueReference="inline"><![CDATA[DELETE FROM mag_msso_device_overview_token
                WHERE access_token=${access_token}]]></L7p:QueryDocument>
                                    <L7p:QueryTimeout stringValueNull="null"/>
                                    </L7p:CassandraQuery>
                                    <L7p:Encapsulated>

                                    <L7p:EncapsulatedAssertionConfigGuid stringValue="927166a6-c831-4964-a66f-4f420bfdffcc"/>

                                    <L7p:EncapsulatedAssertionConfigName stringValue="OTK Token NoSQL Delete"/>
                                    </L7p:Encapsulated>
                                    </wsp:All>
                                </wsp:OneOrMore>
                                <L7p:assertionComment>
                                    <L7p:Properties mapValue="included">
                                    <L7p:entry>
                                    <L7p:key stringValue="LEFT.COMMENT"/>
                                    <L7p:value stringValue="Delete"/>
                                    </L7p:entry>
                                    <L7p:entry>
                                    <L7p:key stringValue="RIGHT.COMMENT"/>
                                    <L7p:value stringValue="Delete 'oauth_access_token' and 'oauth_refresh_token'"/>
                                    </L7p:entry>
                                    </L7p:Properties>
                                </L7p:assertionComment>
                            </L7p:ForEachLoop>
                            <L7p:assertionComment>
                                <L7p:Properties mapValue="included">
                                    <L7p:entry>
                                    <L7p:key stringValue="LEFT.COMMENT"/>
                                    <L7p:value stringValue="Token"/>
                                    </L7p:entry>
                                </L7p:Properties>
                            </L7p:assertionComment>
                        </wsp:All>
                        <L7p:SetVariable>
                            <L7p:Base64Expression stringValue="cmVtb3ZlZA=="/>
                            <L7p:VariableToSet stringValue="result"/>
                        </L7p:SetVariable>
                        <L7p:assertionComment>
                            <L7p:Properties mapValue="included">
                                <L7p:entry>
                                    <L7p:key stringValue="LEFT.COMMENT"/>
                                    <L7p:value stringValue="yes"/>
                                </L7p:entry>
                            </L7p:Properties>
                        </L7p:assertionComment>
                    </wsp:All>
                    <L7p:assertionComment>
                        <L7p:Properties mapValue="included">
                            <L7p:entry>
                                <L7p:key stringValue="LEFT.COMMENT"/>
                                <L7p:value stringValue="does it exist?"/>
                            </L7p:entry>
                        </L7p:Properties>
                    </L7p:assertionComment>
                </wsp:OneOrMore>
                <L7p:assertionComment>
                    <L7p:Properties mapValue="included">
                        <L7p:entry>
                            <L7p:key stringValue="LEFT.COMMENT"/>
                            <L7p:value stringValue="Magidentifier"/>
                        </L7p:entry>
                    </L7p:Properties>
                </L7p:assertionComment>
            </wsp:All>
            <wsp:All wsp:Usage="Required">
                <L7p:AuditDetailAssertion>
                    <L7p:Detail stringValue="Device removal failed with certdn='${certdn}', magidentifier='${magidentifier}'"/>
                </L7p:AuditDetailAssertion>
                <L7p:SetVariable>
                    <L7p:Base64Expression stringValue="MTA3"/>
                    <L7p:VariableToSet stringValue="error.code"/>
                </L7p:SetVariable>
                <L7p:FalseAssertion/>
                <L7p:assertionComment>
                    <L7p:Properties mapValue="included">
                        <L7p:entry>
                            <L7p:key stringValue="LEFT.COMMENT"/>
                            <L7p:value stringValue="error"/>
                        </L7p:entry>
                    </L7p:Properties>
                </L7p:assertionComment>
            </wsp:All>
            <L7p:assertionComment>
                <L7p:Properties mapValue="included">
                    <L7p:entry>
                        <L7p:key stringValue="LEFT.COMMENT"/>
                        <L7p:value stringValue="perform query"/>
                    </L7p:entry>
                </L7p:Properties>
            </L7p:assertionComment>
        </wsp:OneOrMore>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="== Knox not supported here"/>
        </L7p:CommentAssertion>
        <L7p:SetVariable>
            <L7p:Base64Expression stringValue="dGV4dC9wbGFpbjtjaGFyc2V0PVVURi04"/>
            <L7p:VariableToSet stringValue="content-type"/>
        </L7p:SetVariable>
    </wsp:All>
</wsp:Policy>