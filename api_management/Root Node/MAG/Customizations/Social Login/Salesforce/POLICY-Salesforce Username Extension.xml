<?xml version="1.0" encoding="UTF-8"?>
<wsp:Policy xmlns:L7p="http://www.layer7tech.com/ws/policy" xmlns:wsp="http://schemas.xmlsoap.org/ws/2002/12/policy">
    <wsp:All wsp:Usage="Required">
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="Target Policy: &quot;MAG Authenticate via Social Login&quot;"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="This policy overrides how a username is generated "/>
        </L7p:CommentAssertion>
        <L7p:AuditDetailAssertion>
            <L7p:AssertionComment assertionComment="included">
                <L7p:Properties mapValue="included">
                    <L7p:entry>
                        <L7p:key stringValue="LEFT.COMMENT"/>
                        <L7p:value stringValue="DEBUG"/>
                    </L7p:entry>
                </L7p:Properties>
            </L7p:AssertionComment>
            <L7p:Detail stringValue="profile: ${profile.mainpart}"/>
            <L7p:Enabled booleanValue="false"/>
            <L7p:Level stringValue="WARNING"/>
        </L7p:AuditDetailAssertion>
        <L7p:SetVariable>
            <L7p:Base64Expression stringValue="JHtwcm9maWxlLm1haW5wYXJ0fQ=="/>
            <L7p:ContentType stringValue="application/json"/>
            <L7p:DataType variableDataType="message"/>
            <L7p:VariableToSet stringValue="profile"/>
        </L7p:SetVariable>
        <L7p:EvaluateJsonPathExpression>
            <L7p:Expression stringValue="display_name"/>
            <L7p:OtherTargetMessageVariable stringValue="profile"/>
            <L7p:Target target="OTHER"/>
            <L7p:VariablePrefix stringValue="profile.username"/>
        </L7p:EvaluateJsonPathExpression>
        <L7p:EvaluateJsonPathExpression>
            <L7p:Expression stringValue="user_id"/>
            <L7p:OtherTargetMessageVariable stringValue="profile"/>
            <L7p:Target target="OTHER"/>
            <L7p:VariablePrefix stringValue="profile.id"/>
        </L7p:EvaluateJsonPathExpression>
        <L7p:SetVariable>
            <L7p:Base64Expression stringValue="JHtwcm92aWRlcn0ke2Nvbm5lY3Rvcn0ke3Byb2ZpbGUuaWQucmVzdWx0fS0ke3Byb2ZpbGUudXNlcm5hbWUucmVzdWx0fQ=="/>
            <L7p:VariableToSet stringValue="resource_owner"/>
        </L7p:SetVariable>
    </wsp:All>
</wsp:Policy>