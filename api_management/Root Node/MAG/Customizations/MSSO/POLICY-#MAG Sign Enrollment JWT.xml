<?xml version="1.0" encoding="UTF-8"?>
<wsp:Policy xmlns:L7p="http://www.layer7tech.com/ws/policy" xmlns:wsp="http://schemas.xmlsoap.org/ws/2002/12/policy">
    <wsp:All wsp:Usage="Required">
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="This policy is used at &quot;/connect/device/enrollment&quot; and signs a JWT."/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="By default it uses RS256 with the default SSL key of the gateway."/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="INPUT: 'id_token&quot;, the content to be signed"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="INPUT: 'jwt.compact&quot;, the actual JWT."/>
        </L7p:CommentAssertion>
        <L7p:EncodeJsonWebToken>
            <L7p:KeyGoid goidValue="0000000000000000ffffffffffffffff"/>
            <L7p:SignPayload booleanValue="true"/>
            <L7p:SignatureAlgorithm stringValue="RS256"/>
            <L7p:SignatureSourceType intValue="1"/>
            <L7p:SourceVariable stringValue="${id_token}"/>
            <L7p:TargetVariable stringValue="jwt"/>
        </L7p:EncodeJsonWebToken>
    </wsp:All>
</wsp:Policy>