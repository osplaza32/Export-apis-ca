<?xml version="1.0" encoding="UTF-8"?>
<wsp:Policy xmlns:L7p="http://www.layer7tech.com/ws/policy" xmlns:wsp="http://schemas.xmlsoap.org/ws/2002/12/policy">
    <wsp:All wsp:Usage="Required">
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="Target Policy: &quot;MAG Session Validation - Third Party SSO Token Override&quot;"/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="=== Set custom values for Context Variables below ==="/>
        </L7p:CommentAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="=== Add any new Context Variables or extensions below ==="/>
        </L7p:CommentAssertion>
        <wsp:All L7p:Enabled="false" wsp:Usage="Required">
            <L7p:CommentAssertion>
                <L7p:Comment stringValue="=== Enable this block if a SiteMinder configuration has been configured and updated appropriately"/>
            </L7p:CommentAssertion>
            <L7p:ComparisonAssertion>
                <L7p:CaseSensitive booleanValue="false"/>
                <L7p:Expression1 stringValue="${third_party_sso_token_type}"/>
                <L7p:Expression2 stringValue="${third_party_sso_token_type_smssotoken}"/>
                <L7p:Predicates predicates="included">
                    <L7p:item binary="included">
                        <L7p:CaseSensitive booleanValue="false"/>
                        <L7p:RightValue stringValue="${third_party_sso_token_type_smssotoken}"/>
                    </L7p:item>
                </L7p:Predicates>
            </L7p:ComparisonAssertion>
            <L7p:EncodeDecode>
                <L7p:SourceVariableName stringValue="third_party_sso_token"/>
                <L7p:TargetDataType variableDataType="string"/>
                <L7p:TargetVariableName stringValue="third_party_sso_token"/>
                <L7p:TransformType transformType="BASE64_DECODE"/>
            </L7p:EncodeDecode>
            <L7p:SiteMinderCheckProtected>
                <L7p:Action stringValue="GET"/>
                <L7p:AgentId stringValue="siteminder"/>
                <L7p:Prefix stringValue="siteminder"/>
                <L7p:ProtectedResource stringValue="/modey"/>
                <L7p:SmAgentName stringValue="agent"/>
            </L7p:SiteMinderCheckProtected>
            <L7p:SiteMinderAuthenticate>
                <L7p:CookieSourceVar stringValue="third_party_sso_token"/>
                <L7p:NamedUser stringValue="${creds}"/>
                <L7p:Prefix stringValue="siteminder"/>
                <L7p:UseSMCookie booleanValue="true"/>
            </L7p:SiteMinderAuthenticate>
            <L7p:SetVariable>
                <L7p:Base64Expression stringValue="YWN0aXZl"/>
                <L7p:VariableToSet stringValue="third_party_sso_token_state"/>
            </L7p:SetVariable>
            <L7p:assertionComment>
                <L7p:Properties mapValue="included">
                    <L7p:entry>
                        <L7p:key stringValue="LEFT.COMMENT"/>
                        <L7p:value stringValue="JWT-SMSSOTOKEN"/>
                    </L7p:entry>
                    <L7p:entry>
                        <L7p:key stringValue="RIGHT.COMMENT"/>
                        <L7p:value stringValue="Token Extension"/>
                    </L7p:entry>
                </L7p:Properties>
            </L7p:assertionComment>
        </wsp:All>
    </wsp:All>
</wsp:Policy>