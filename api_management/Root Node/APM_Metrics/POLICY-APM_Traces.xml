<?xml version="1.0" encoding="UTF-8"?>
<wsp:Policy xmlns:L7p="http://www.layer7tech.com/ws/policy" xmlns:wsp="http://schemas.xmlsoap.org/ws/2002/12/policy">
    <wsp:All wsp:Usage="Required">
        <L7p:SetVariable>
            <L7p:AssertionComment assertionComment="included">
                <L7p:Properties mapValue="included">
                    <L7p:entry>
                        <L7p:key stringValue="RIGHT.COMMENT"/>
                        <L7p:value stringValue="This context variable is used to keep track of the version of policy."/>
                    </L7p:entry>
                </L7p:Properties>
            </L7p:AssertionComment>
            <L7p:Base64Expression stringValue="My4z"/>
            <L7p:VariableToSet stringValue="version"/>
        </L7p:SetVariable>
        <L7p:SetVariable>
            <L7p:AssertionComment assertionComment="included">
                <L7p:Properties mapValue="included">
                    <L7p:entry>
                        <L7p:key stringValue="RIGHT.COMMENT"/>
                        <L7p:value stringValue="This context variable sets the top level name of the node."/>
                    </L7p:entry>
                </L7p:Properties>
            </L7p:AssertionComment>
            <L7p:Base64Expression stringValue="JHtzc2dub2RlLmhvc3RuYW1lfQ=="/>
            <L7p:VariableToSet stringValue="node"/>
        </L7p:SetVariable>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="Retrieve Assertion Level Metrics"/>
        </L7p:CommentAssertion>
        <L7p:GlmMetrics/>
        <L7p:SetVariable>
            <L7p:Base64Expression stringValue="JHtsYXRlbmN5TWV0cmljcy5kb2N1bWVudH0="/>
            <L7p:ContentType stringValue="text/xml; charset=utf-8"/>
            <L7p:DataType variableDataType="message"/>
            <L7p:VariableToSet stringValue="svcTraces"/>
        </L7p:SetVariable>
        <L7p:AuditDetailAssertion>
            <L7p:Detail stringValue="=============  Latency Metrics Traces Start ============ ${svcTraces.mainpart}"/>
            <L7p:Enabled booleanValue="false"/>
            <L7p:LoggingOnly booleanValue="true"/>
        </L7p:AuditDetailAssertion>
        <L7p:AuditDetailAssertion>
            <L7p:Detail stringValue="=============  Latency Metrics Traces End ============"/>
            <L7p:Enabled booleanValue="false"/>
            <L7p:LoggingOnly booleanValue="true"/>
        </L7p:AuditDetailAssertion>
        <L7p:CommentAssertion>
            <L7p:Comment stringValue="Send the Assertion Level Service Traces to EPAgent individually via Raw TCP if any"/>
        </L7p:CommentAssertion>
        <wsp:OneOrMore wsp:Usage="Required">
            <wsp:All wsp:Usage="Required">
                <L7p:ComparisonAssertion>
                    <L7p:CaseSensitive booleanValue="false"/>
                    <L7p:Expression1 stringValue="${latencyMetrics.count}"/>
                    <L7p:Operator operatorNull="null"/>
                    <L7p:Predicates predicates="included">
                        <L7p:item dataType="included">
                            <L7p:Type variableDataType="int"/>
                        </L7p:item>
                        <L7p:item binary="included">
                            <L7p:CaseSensitive booleanValue="false"/>
                            <L7p:Operator operator="GT"/>
                            <L7p:RightValue stringValue="0"/>
                        </L7p:item>
                    </L7p:Predicates>
                </L7p:ComparisonAssertion>
                <L7p:SimpleRawTransport>
                    <L7p:AssertionComment assertionComment="included">
                        <L7p:Properties mapValue="included">
                            <L7p:entry>
                                <L7p:key stringValue="RIGHT.COMMENT"/>
                                <L7p:value stringValue="Send the generated APM traces (events) to EP Agent. "/>
                            </L7p:entry>
                        </L7p:Properties>
                    </L7p:AssertionComment>
                    <L7p:RequestTarget MessageTarget="included">
                        <L7p:OtherTargetMessageVariable stringValue="svcTraces"/>
                        <L7p:Target target="OTHER"/>
                    </L7p:RequestTarget>
                    <L7p:TargetHost stringValue="${gateway.apm.epagent.hostname}"/>
                    <L7p:TargetPort stringValue="${gateway.apm.epagent.tcpport}"/>
                </L7p:SimpleRawTransport>
                <L7p:AuditDetailAssertion>
                    <L7p:Detail stringValue="Sent ${latencyMetrics.count} traces to EPAgent."/>
                    <L7p:Level stringValue="FINE"/>
                    <L7p:LoggingOnly booleanValue="true"/>
                </L7p:AuditDetailAssertion>
            </wsp:All>
            <wsp:All wsp:Usage="Required">
                <L7p:TrueAssertion/>
            </wsp:All>
        </wsp:OneOrMore>
    </wsp:All>
</wsp:Policy>