                                <xsl:value-of select="text()"/>
                                </xsl:element>
                                </xsl:for-each>
                                </xsl:element>
                                </xsl:for-each>
                                </xsl:element>
                                </xsl:template>

                                </xsl:stylesheet>]]></L7p:Document>
