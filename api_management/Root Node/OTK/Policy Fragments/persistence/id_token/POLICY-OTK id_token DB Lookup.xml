                                <xsl:output cdata-section-elements="ns:jwt ns:resource_owner ns:azp ns:salt ns:iss ns:shared_secret ns:shared_secret_type" encoding="UTF-8" indent="yes" method="xml"/>

                                <xsl:template match="L7j:jdbcQueryResult">
