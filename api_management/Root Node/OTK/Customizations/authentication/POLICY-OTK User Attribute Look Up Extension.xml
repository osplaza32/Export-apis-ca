                        <L7p:value stringValue="// export more variables if required"/>
                    </L7p:entry>
                </L7p:Properties>
            </L7p:AssertionComment>
            <L7p:ExportedVars stringArrayValue="included">
                <L7p:item stringValue="current.user.attributes"/>
                <L7p:item stringValue="current.user.role"/>
            </L7p:ExportedVars>
        </L7p:ExportVariables>
    </wsp:All>
